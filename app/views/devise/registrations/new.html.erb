<body>
    <%= render "shared/header" %>
    <main>
        <div class="top-page">
            <%# <video src="/aseets/videos/video.mp4" autoplay muted loop class="main-video"></video> %>
            <%= video_tag "/videos/video.mp4", autoplay: :true, loop: :true, muted: :true, playsinline: true, class:"main-video" %>
            <%= form_with model: @user, url: user_registration_path, class: "sign-up-form", local: true do |f| %>

                <%= render "shared/error_messages", model: f.object %>

                <h2>Sign up</h2>
                <%= f.label :name ,"●名前を入力" %>
                <%= f.text_area :name, class:"input-default" %>
                <%= f.label :nickname,"●ニックネームを入力" %>
                <%= f.text_area :nickname, class:"input-default", maxlength:"40" %>
                <%= f.label :email, "●メールアドレスを入力" %>
                <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
                <%= f.label :password,"●パスワードを入力(半角６字以上)" %>
                <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
                <%= f.label :password_confirmation,"●パスワードを再度入力＜確認＞" %>
                <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい" %>
                <%= f.submit "会員登録" ,id:"submit-btn" %>
            <% end %>
        </div>
    </main>
</body>